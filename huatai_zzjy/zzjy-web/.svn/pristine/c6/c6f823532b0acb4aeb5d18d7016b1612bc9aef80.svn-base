/*个人中心*/
.ui-account-head {
	padding: 25px 0 0;
	height: 200px;
	text-align: center;
	background: #fff;
	position: relative;
}
.mui-btn-primary {
	padding: 3px 20px;
	border-radius: 15px;
}
.ui-account-photo {
	width: 75px;
	height: 75px;
	cursor: pointer;
	background: #dddddd;
	border-radius: 50%;
	margin: 0 auto;
	overflow: hidden;
}
.mui-slider-indicator .mui-active.mui-indicator { background: #007aff; }
.mui-slider-indicator .mui-indicator {
	display: inline-block;
	width: 6px;
	height: 6px;
	margin: 1px 6px;
	cursor: pointer;
	border-radius: 50%;
	background: #fff;
	-webkit-box-shadow: none;
	box-shadow: none;
	border: 1px solid #007aff;
}
.ui-account-photo img { width: 100%; }
.ui-account-photo .text {
	position: absolute;
	left: 53%;
	top: 20px;
	width: 1.5rem;
	height: 1.5rem;
	line-height: 1.5rem;
	background: #4ab5f1;
	color: #fff;
	text-align: center;
	font-size: 0.7rem;
	border-radius: 50%;
	z-index: 2;
}
.ui-account-head p {
	line-height: 2rem;
	color: #333;
}
.ui-account-head p.name {
	font-size: 19px;
	margin-top: 0.5rem;
}
.ui-account-main {
	padding: 0.5rem 0 0;
	background: #fff;
	width: 100%;
}
.ui-account-main li {
	position: relative;
	height: 68px;
	padding-top: 5px;
	border-bottom: 1px solid #ddd;
}
.ui-account-main li span { vertical-align: middle; }
.ui-account-main li img { vertical-align: middle; }
.list-pic {
	width: 50px;
	height: 50px;
	border-radius: 25px;
	position: absolute;
	left: 40px;
}
.list-num {
	position: absolute;
	left: 10px;
	top: 15px;
}
.list-text {
	position: absolute;
	left: 100px;
	top: 15px;
}
.list-right {
	position: absolute;
	right: 15px;
	top: 15px;
}
.ui-account-main li a {
	color: #333;
	display: block;
	position: relative;
}
.ui-account-main li.btn:active { background: #ddd; }
.ui-account-main li .ui-arrow-right {
	position: absolute;
	right: 0.5rem;
	line-height: 2rem;
}
.ui-account-check {
	position: absolute;
	right: 0;
	top: 50%;
	margin-top: -0.8rem;
	width: 4.4rem;
	height: 1.6rem;
}
.ui-account-check-line {
	border-radius: 0.3rem;
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	-webkit-transition: all .2s ease-in;
	-moz-transition: all .2s ease-in;
	transition: all .2s ease-in;
}
.ui-account-check-bar {
	width: 50%;
	position: absolute;
	top: 0.1rem;
	bottom: 0.1rem;
	border-radius: 0.3rem;
	-webkit-transition: all .2s ease-in;
	-moz-transition: all .2s ease-in;
	transition: all .2s ease-in;
}
.ui-account-check.on .ui-account-check-line { background: #3a97e5; }
.ui-account-check.on .ui-account-check-bar {
	background: #fff;
	left: 2.1rem;
}
.ui-account-check.off .ui-account-check-line { background: #ccc; }
.ui-account-check.off .ui-account-check-bar {
	background: #fff;
	left: 0.1rem;
}
.ui-account-bottom {
	padding: 1rem 0.5rem;
	text-align: center;
}
.ui-bottom-bg {
	padding-bottom: 7rem;
	background: url(../images/bottom-bg.png) no-repeat bottom left;
	background-size: 100%;
}
.ui-account-btn {
	border: 1px solid #ffc600;
	display: block;
	background: #ffc600;
	color: #fff;
	border-radius: 1.3rem;
	line-height: 2.6rem;
}
.ui-account-btn:active {
	background: #3a97e5;
	border: 1px solid #3a97e5;
	color: #fff;
}
body{ background:#f9f9f9;}
.list-tab {
	height: 30px;
	width: 90%;
	background: #fff;
	margin: 10px 5%;
	border-radius:0;
	border:none;
	overflow: hidden;
}
.list-tab li {
	width: 50%;
	height: 30px;
	cursor: pointer;
	float: left;
	overflow: hidden;
}
.list-tab li:first-child{ border-top:2px solid #999;border-right:2px solid #007aff;border-bottom:2px solid #999;border-left:2px solid #999; border-top-left-radius:5px;border-bottom-left-radius:5px;}
.list-tab li:last-child{ border-top:2px solid #999;border-right:2px solid #999;border-bottom:2px solid #999;border-top-right-radius:5px;border-bottom-right-radius:5px;}

.list-tab li span {
	display: inline-block;
	width: 50%;
	height: 30px;
	line-height: 30px;
	text-align: center;
}
.list-tab li.active {	border-color:#007aff;}
.list-tab li .ico-none { }
.list-tab li.active span {
	text-align: center;
	width: 100%;
	color: #007aff;
	background:none;
	height: 30px;

}
.list-tab li.normal span {
	color: #333;
	width: 100%;
	height: 30px;
}
